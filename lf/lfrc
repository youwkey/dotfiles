set hidden
set mouse
set icons
set drawbox
set incsearch
set incfilter
set scrolloff 5
set dircounts

setlocal ~/Downloads sortby time
setlocal ~/Downloads reverse
setlocal ~/Downloads dirfirst false

set previewer ~/.config/lf/preview.sh

cmd trash-files $~/.config/lf/trash.sh
map D trash-files

cmd mkdir %mkdir -p "$@"
map A push :mkdir<space>

cmd touch %touch "$@"
map a push :touch<space>
